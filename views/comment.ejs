<br>
<%post.comments.forEach(function(comment,index){%>
	<p><a href="<%= comment.website%>"><%=comment.name%></a>
		<span class="info">回复于<%= comment.time%></span>
	</p>
	<p><%=comment.content%></p>
<%})%>
<form method="post">
	<%if(user){%>
	  姓名:<input type="text" name="name" value="<%=user.username%>"/><br/>
	  邮箱:<input type="text" name="email" value="<%=user.email%>"/><br/>
	  网址:<input type="text" name="website" value="/u/<%=user.username%>"/><br/>
   <%}else{%>
      姓名:<input type="text" name="name" value=""  /><br/>
	  邮箱:<input type="text" name="email" /><br/>
	  网址:<input type="text" name="website" value="http://"/><br/>
<%}%>
  <textarea name="content" rows="10" cols="80"></textarea><br>
  <input type="submit" name="" value="评论"/>
</form>